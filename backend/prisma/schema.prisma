generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  name          String  @db.VarChar(255)
  username      String  @db.VarChar(255)
  password      String  @db.VarChar(255)   
  isAdmin       Boolean @default(false)
  dept          Department
}


enum Department {
  CCTV_OPERATION
  ESG
  FINANCE
  FRONT_DESK
  HR
  IT
  MARKETING
  PROCUREMENT
}
